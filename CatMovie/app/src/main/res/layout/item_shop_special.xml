<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <TextView
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:text="每月特价"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_shop_special_name1"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:text="名字"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_shop_special_desc1"
                android:textSize="12sp"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text="名字"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/tv_shop_special_icon1"
                android:scaleType="fitXY"
                android:layout_margin="12dp"
                android:background="@drawable/splash_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_shop_special_name2"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:paddingLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="名字"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_shop_special_desc2"
                            android:textSize="12sp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="名字"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tv_shop_special_icon2"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/splash_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_shop_special_name3"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:paddingLeft="12dp"
                            android:gravity="center_vertical"
                            android:text="名字"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_shop_special_desc3"
                            android:textSize="12sp"
                            android:paddingLeft="12dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="名字"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tv_shop_special_icon3"
                        android:layout_marginRight="12dp"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/splash_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_test"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:text="你可能会喜欢"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>