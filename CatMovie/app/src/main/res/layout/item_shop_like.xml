<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingRight="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shop_likeicon"
            android:scaleType="fitXY"
            android:background="@drawable/splash_2"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/tv_shop_like1"
            android:layout_marginTop="12dp"
            android:text="正版...."
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="center"
            android:layout_below="@id/shop_likeicon"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_shop_like1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shop_like2"
                android:textSize="16sp"
                android:textColor="#f90000"
                android:text="99"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_test"
                android:textSize="10sp"
                android:layout_marginLeft="2dp"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/tv_shop_like2"
                android:layout_toRightOf="@+id/tv_shop_like2"
                android:textColor="#f90000"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_shop_like3"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/tv_test"
                android:layout_toRightOf="@+id/tv_test"
                android:textSize="12sp"
                android:text="199元"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shop_likeicon1"
            android:scaleType="fitXY"
            android:background="@drawable/splash_2"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/tv_shop_like4"
            android:layout_marginTop="12dp"
            android:text="正版...."
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="center"
            android:layout_below="@id/shop_likeicon1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_shop_like4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shop_like5"
                android:textSize="16sp"
                android:textColor="#f90000"
                android:text="99"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_test1"
                android:textSize="10sp"
                android:layout_marginLeft="2dp"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/tv_shop_like5"
                android:layout_toRightOf="@+id/tv_shop_like5"
                android:textColor="#f90000"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_shop_like6"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/tv_test1"
                android:layout_toRightOf="@+id/tv_test1"
                android:textSize="12sp"
                android:text="199元"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>