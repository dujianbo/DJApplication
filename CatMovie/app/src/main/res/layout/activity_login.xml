<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.personal.djb.catmovie.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/title_yk"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:background="#dd403b"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/ib_cart_forback"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_title_selector"
            android:src="@drawable/je"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_toRightOf="@id/ib_cart_forback"
            android:background="#68000000"
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginLeft="16dp"
            android:textSize="18sp"
            android:text="登录"
            android:layout_toRightOf="@+id/ib_cart_forback"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_no_password"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:paddingRight="8dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="80dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/title_yk"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_centerInParent="true"
            android:background="@drawable/a6z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/title_yk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="美团账号登录"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="12dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="用户名 : "
                android:layout_width="80dp"
                android:layout_height="50dp" />
            <EditText
                android:id="@+id/et_login_username"
                android:textSize="16sp"
                android:hint="邮箱/手机号/用户名"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#e8e8e8"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="12dp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="密    码 : "
                android:layout_width="80dp"
                android:layout_height="50dp" />
            <EditText
                android:id="@+id/et_login_password"
                android:textSize="16sp"
                android:hint="密码"
                android:password="true"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="登录"
            android:background="@drawable/login_bg_selector"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/tv_register"
                android:text="立即注册"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"
                android:clickable="true"
                android:textColor="#ff9900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_number_login"
                android:paddingRight="12dp"
                android:gravity="right"
                android:clickable="true"
                android:text="手机号快捷登录"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"
                android:textColor="#ff9900"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/weixin"
            android:layout_marginLeft="16dp"
            android:background="@drawable/xt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/weibo"
            android:layout_marginLeft="16dp"
            android:background="@drawable/xn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/qq"
            android:layout_marginLeft="16dp"
            android:background="@drawable/xj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/qqzone"
            android:layout_marginLeft="16dp"
            android:background="@drawable/xl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
