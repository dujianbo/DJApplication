<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_title_desc"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="近期最好的电影"
            android:textColor="#000000"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_below="@+id/tv_item_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/iv_item_hotmovie_icon_rl"
                android:layout_width="60dp"
                android:layout_marginLeft="8dp"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/iv_item_hotmovie_icon"
                    android:background="@drawable/backgroud_logo02"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="90dp" />

                <ImageView
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/a5b"
                    android:layout_width="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_height="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/iv_item_hotmovie_icon_rl">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_item_hotmovie_name"
                        android:ellipsize="middle"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="电影"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_item_hotmovie_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_imax2d"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_3d"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/iv_imax3d"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_item_hotmovie_score"
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:visibility="gone"
                        android:paddingBottom="6dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_item_hotmovie_score"
                            android:textSize="16sp"
                            android:text="8.5"
                            android:textColor="#ff9900"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="10sp"
                            android:text="分"
                            android:textColor="#ff9900"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_item_hotmovie_wish"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="bottom"
                        android:paddingBottom="6dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_item_hotmovie_wish"
                            android:textSize="16sp"
                            android:text="9837283"
                            android:textColor="#ff9900"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="10sp"
                            android:text="人想看"
                            android:gravity="bottom"
                            android:textColor="#ff9900"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>



            <RelativeLayout
                android:layout_alignBottom="@id/iv_item_hotmovie_icon_rl"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@+id/rl_btngroup"
                android:layout_toRightOf="@id/iv_item_hotmovie_icon_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_hotmovie_desc"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:layout_marginBottom="3dp"
                    android:text="周董变魔术，敌人挡不住"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_item_hotmovie_count"
                    android:layout_below="@id/tv_item_hotmovie_desc"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:text="放映场次19999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_item_hotmovie_date"
                    android:layout_below="@id/tv_item_hotmovie_desc"
                    android:singleLine="true"
                    android:text="上映日期"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_btngroup"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/iv_item_hotmovie_icon_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_item_hotmovie_buy"
                    android:background="@drawable/btn_hotmovie_buy"
                    android:text="购票"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@drawable/btn_text_selertor1"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btn_item_hotmovie_want"
                    android:background="@drawable/btn_hotmovie_buy"
                    android:drawableLeft="@drawable/xihuan_xin"
                    android:paddingLeft="4dp"
                    android:textColor="@drawable/btn_text_selertor1"
                    android:text="想看"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btn_item_hotmovie_order"
                    android:background="@drawable/btn_hotmovie_order"
                    android:text="预约"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@drawable/btn_text_selertor2"
                    android:layout_width="50dp"
                    android:layout_height="30dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_below="@+id/iv_item_hotmovie_icon_rl"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:id="@+id/ll_item_fordingwei"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_item_news1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_marginLeft="40dp"
                        android:id="@+id/iv_item_small_icon1"
                        android:layout_centerVertical="true"
                        android:text="专题"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textColor="#ff9900"
                        android:background="@drawable/tv_icon_bg_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_item_small_icon1"
                        android:background="#f1f1f1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/tv_item_desc1"
                        android:layout_toRightOf="@+id/iv_item_small_icon1"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:ellipsize="middle"
                        android:layout_marginLeft="8dp"
                        android:text="绿巨人:周杰伦真的很酷"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_item_news2"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_marginLeft="40dp"
                        android:id="@+id/iv_item_small_icon2"
                        android:layout_centerVertical="true"
                        android:text="资讯"
                        android:padding="3dp"
                        android:textSize="12sp"
                        android:textColor="#ff9900"
                        android:background="@drawable/tv_icon_bg_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/iv_item_small_icon2"
                        android:background="#f1f1f1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/tv_item_desc2"
                        android:layout_toRightOf="@+id/iv_item_small_icon2"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:textSize="14sp"
                        android:layout_marginLeft="8dp"
                        android:text="绿巨人:周杰伦真的很酷"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/tv_item_movie_checkall_rl"
                android:visibility="visible"
                android:layout_below="@+id/ll_item_fordingwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:background="#e8e8e8"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tv_item_movie_checkall"
                    android:textColor="#dd403b"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="查看全部待映影片"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>