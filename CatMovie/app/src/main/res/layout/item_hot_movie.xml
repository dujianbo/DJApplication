<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <TextView
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/iv_item_hotmovie_icon_rl"
        android:layout_width="80dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/iv_item_hotmovie_icon"
            android:background="@drawable/backgroud_logo02"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="120dp" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/a5b"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_item_hotmovie_icon_rl">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_item_hotmovie_name"
                android:layout_centerVertical="true"
                android:text="电影名称"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_imax2d"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_item_hotmovie_name"
                android:background="@drawable/ru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_3d"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_item_hotmovie_name"
                android:background="@drawable/rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_imax3d"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_item_hotmovie_name"
                android:background="@drawable/rw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_item_hotmovie_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_item_hotmovie_score"
                    android:textSize="24sp"
                    android:text="8.5"
                    android:textColor="#0099ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:text="分"
                    android:textColor="#0099ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_item_hotmovie_wish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_item_hotmovie_wish"
                    android:textSize="24sp"
                    android:text="9837283"
                    android:textColor="#0099ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:text="人想看"
                    android:textColor="#0099ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_item_hotmovie_icon_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_hotmovie_desc"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:text="周董变魔术，敌人挡不住"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_hotmovie_count"
            android:layout_below="@id/tv_item_hotmovie_desc"
            android:visibility="gone"
            android:textSize="16sp"
            android:text="放映场次19999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_hotmovie_date"
            android:layout_below="@id/tv_item_hotmovie_desc"
            android:visibility="gone"
            android:textSize="16sp"
            android:text="上映日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_item_hotmovie_buy"
        android:background="@drawable/btn_hotmovie_buy"
        android:text="购票"
        android:visibility="gone"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn_item_hotmovie_order"
        android:background="@drawable/btn_hotmovie_order"
        android:visibility="gone"
        android:text="预约"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="60dp"
        android:layout_height="40dp" />
</RelativeLayout>