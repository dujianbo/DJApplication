<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_waitmovie_head_top"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_width="200dp"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_waitmovie_head_top_icon"
            android:scaleType="fitXY"
            android:background="@drawable/tc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_waitmovie_head_top_name"
            android:text="湄公河行动"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_above="@+id/tv_waitmovie_head_top_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_waitmovie_head_top_desc"
            android:textColor="#ffffff"
            android:text="首款预告片"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/a5b"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_waitmovie_head_bottom"
        android:layout_width="100dp"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_height="180dp">
        
        <TextView
            android:id="@+id/tv_waitmovie_head_bottom_date"
            android:text="8月5日"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_waitmovie_head_bottom_icon"
            android:layout_below="@id/tv_waitmovie_head_bottom_date"
            android:background="@drawable/rw"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_waitmovie_head_bottom_name"
            android:text="盜墓笔记"
            android:textSize="14sp"
            android:layout_above="@+id/tv_waitmovie_head_bottom_want"
            android:textColor="#000000"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_waitmovie_head_bottom_want"
            android:text="85692人想看"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignTop="@id/iv_waitmovie_head_bottom_icon"
            android:background="@drawable/xihuan_cang"
            android:layout_width="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_height="20dp" />

    </RelativeLayout>
</RelativeLayout>