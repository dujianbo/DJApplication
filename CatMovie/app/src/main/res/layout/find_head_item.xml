<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_item_hot_movie_head"
        android:layout_width="match_parent"
        android:layout_height="220dp">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_alignBottom="@+id/vp_item_hot_movie_head"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_currtitle"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="敬请期待"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/vp_item_hot_movie_head"
        android:id="@+id/find_head_ll_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <Button
            android:id="@+id/huati"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/v_"
            android:paddingTop="12dp"
            android:background="@drawable/btn_click_selector"
            android:textSize="12sp"
            android:text="话题"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/zixun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/zixun"
            android:paddingTop="12dp"
            android:background="@drawable/btn_click_selector"
            android:textSize="12sp"
            android:text="资讯"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/yingku"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/v02_"
            android:paddingTop="12dp"
            android:background="@drawable/btn_click_selector"
            android:textSize="12sp"
            android:text="影库"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/piaofang"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:drawableTop="@drawable/tf"
            android:paddingTop="12dp"
            android:background="@drawable/btn_click_selector"
            android:textSize="12sp"
            android:text="票房"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>