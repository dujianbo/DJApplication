<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/my_head"
        android:background="#dd403b"
        android:minHeight="110dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        
        <ImageView
            android:id="@+id/iv_my_user_icon"
            android:layout_centerVertical="true"
            android:background="@drawable/backgroud_logo"
            android:layout_width="60dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp" />


        <ImageView
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/triangle01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:text="立即登录"
            android:gravity="center_vertical"
            android:clickable="true"
            android:textColor="@drawable/tv_chick_color"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_my_user_icon"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/ll_my_user_islogin"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_my_user_icon"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_my_islogin_username"
                android:textSize="16sp"
                android:text="天的恩惠"
                android:gravity="center_vertical"
                android:clickable="true"
                android:textColor="@drawable/tv_chick_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_my_islogin_level"
                android:layout_marginTop="2dp"
                android:textColor="@drawable/tv_chick_color"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:clickable="true"
                android:textSize="10sp"
                android:layout_below="@id/tv_my_islogin_username"
                android:gravity="center"
                android:text="V2 白银会员"
                android:background="@drawable/my_user_icon_bg_selector"
                android:layout_width="wrap_content"
                android:layout_height="16dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_body"
        android:background="#ffffff"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/my_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/buttonstyle"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:text="想看"
            android:drawableTop="@drawable/vi"
            android:layout_height="match_parent" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/buttonstyle"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:text="看过"
            android:drawableTop="@drawable/vf"
            android:layout_height="match_parent" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/buttonstyle"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:text="影评"
            android:drawableTop="@drawable/va"
            android:layout_height="match_parent" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="top|center_horizontal"
            android:background="@drawable/buttonstyle"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:text="话题"
            android:drawableTop="@drawable/vh"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>