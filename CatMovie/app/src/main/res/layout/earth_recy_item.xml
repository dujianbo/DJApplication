<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_marginLeft="8dp"
android:layout_marginRight="8dp"
android:layout_width="130dp"
    android:gravity="center"
android:orientation="vertical"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_earth1"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/my_jiantou"
        android:textSize="14sp"
        android:text="电影节名"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/earthicon1"
            android:scaleType="fitXY"
            android:layout_marginTop="12dp"
            android:background="@drawable/splash_2"
            android:layout_width="100dp"
            android:layout_height="130dp" />

        <TextView
            android:id="@+id/tv_item_earth3"
            android:layout_alignRight="@+id/earthicon1"
            android:layout_alignTop="@+id/earthicon1"
            android:background="@drawable/bg_tv_cinema_blue"
            android:textSize="10sp"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:text="奖名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_earth2"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:text="获奖电影名称"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>