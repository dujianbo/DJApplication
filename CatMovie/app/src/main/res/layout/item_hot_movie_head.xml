<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/vp_item_hot_movie_head"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/rl_head_waitmovie"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_head_title1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="预告片推荐"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="25dp" />
        
        <com.personal.djb.catmovie.view.MyRecyclerView
            android:id="@+id/recyclerview_head_1"
            android:layout_below="@+id/tv_item_head_title1"
            android:layout_width="match_parent"
            android:layout_height="120dp">


        </com.personal.djb.catmovie.view.MyRecyclerView>

        <TextView
            android:id="@+id/tv_item_head_title2"
            android:layout_below="@+id/recyclerview_head_1"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="近期最受期待"
            android:textColor="#000000"
            android:background="#f5f5f5"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <com.personal.djb.catmovie.view.MyRecyclerView
            android:id="@+id/recyclerview_head_2"
            android:layout_below="@+id/tv_item_head_title2"
            android:layout_width="match_parent"
            android:layout_height="180dp">


        </com.personal.djb.catmovie.view.MyRecyclerView>

    </RelativeLayout>
</FrameLayout>